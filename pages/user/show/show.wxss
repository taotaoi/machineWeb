/* pages/user/show/show.wxss */
.fa {
  width: 100%;
  display: flex;
  flex-direction: column;
  font-size: 14px;
}
ul{
   width: 100%;
  display: flex;
  flex-direction: column;
}
li {
  height: 50px;
  width: 100%;
 
  line-height: 50px;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #eee;
}
.tag {
  flex-grow: 1;
  text-align: left;
   padding: 0 10px;
}
.val {
  flex-grow: 1;
  text-align: right;
   padding: 0 10px;
   color: #bbb;
}
.footer{
  padding: 5px;
}
.btn {
  width: 100%;
  height: 40px;
  line-height: 40px;
  font-size: 13px;
  margin-top: 10px;
  border-radius: 3px;
  background-color: red;
  color: #fff;
}