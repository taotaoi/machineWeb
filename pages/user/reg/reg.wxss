/* pages/user/reg/reg.wxss */
.fa {
  padding: 5px;
  font-size: 14px;
  background-color: #efeff4;
  display: flex;
  flex-direction: column;
}
.box {
  height: 100%;
  width: 100%;
  background-color: #fff;
}

.row {
  padding: 5px;
  display: flex;
  flex-direction: column;
}
.tag {
  font-size: 12px;
  color: rgba(0,0,0,.54);
}
input {
  height: 30px;
  border-bottom: 1px solid rgba(0,0,0,.18);
}
input:active {
  border-bottom: 2px solid #3ba7ff;
}

.btn {
  width: 100%;
  height: 40px;
  line-height: 40px;
  font-size: 13px;
  margin-top: 10px;
  border-radius: 3px;
  background-color: #3ba7ff;
  color: #fff;
}