<!--pages/fix/fixing/show/show.wxml-->
<navbar page-name="你当前页面的名字"></navbar>
<view class='navTab'>
  <ul>
    <li class="{{showTab.tab1?'current':''}}" bindtap="tab1Btn">
      维修进度
    </li>
    <li class="{{showTab.tab2?'current':''}}" bindtap="tab2Btn">
      设备信息
    </li>
  </ul>
</view>
<!-- 顶部导航tab 结束 -->
<view class="page-fixingshow" style="{{showTab.tab1?'padding: 0px 20px 10px;':'padding:0px;'}}">

  <!-- tab1页面内容 开始 -->
  <view class="tab1show" hidden="{{!showTab.tab1}}">
    <!-- 1、故障维修box -->
    <view class='Box'>
      <view class='yuan'></view>
      <ul class="content">
        <view class='jiantou'></view>
        <li class="boxTitle">开始维修</li>
        <!-- 提交人信息 -->
        <li class="submitUser">
          <view class="title">维修人:
            <view class="val">{{fixing.fixingname}}</view>
          </view>
          <view class="Time">{{fixing.fixday}}</view>
        </li>
        <!-- 故障描述 -->
        <li class='breakDownAbout'>
          <view class='title'>外委维修/内部维修:</view>
          <view class='val'>{{fixing.whofix}}</view>
        </li>
      </ul>
    </view>
    <!-- 故障维修box 结束 -->

        <!-- 2、故障报修box -->
    <view class='Box'>
      <view class='yuan'></view>
      <ul class="content">
        <view class='jiantou'></view>
        <li class="boxTitle">故障报修</li>
        <!-- 提交人信息 -->
        <li class="submitUser">
          <view class="title">提交人:
            <view class="val">{{fixing.submitname}}</view>
          </view>
          <view class="Time">{{fixing.submitdatetime}}</view>
        </li>
        <!-- 故障描述 -->
        <li class='breakDownAbout'>
          <view class='title'>故障描述:</view>
          <view class='val'>{{fixing.submitabout}}</view>
        </li>
        <!-- 故障类型 -->
        <li class="breakDownType">
          <view class='title'>故障类型:</view>
          <view class='val'>{{fixing.fixtype}}</view>
        </li>
        <image src='{{myProcess.fixOBJ.submitimage}}' style='height:100px;width:96px;'></image>
      </ul>
    </view>
    <!-- 故障报修box 结束 -->

  </view>
  <!-- tab1页面内容 结束 -->

<!-- 设备档案 开始 tab2 -->
<view class="content" hidden="{{!showTab.tab2}}">
  <ul>
    <li class="machineTile">{{ma.machineid+" "+ma.name}}</li>
    <li>
      <span class="ListTitle">设备类型</span>
      <text class='ListVal'>{{ma.type}}</text>
    </li>
    <li>
      <span class="ListTitle">规格型号</span>
      <text class='ListVal'>{{ma.model}}</text>
    </li>
    <li>
      <span class="ListTitle">购置日期</span>
      <text class='ListVal'>{{ma.payday}}</text>
    </li>
    <li>
      <span class="ListTitle">启用日期</span>
      <text class='ListVal'>{{ma.usedday}}</text>
    </li>
    <li>
      <span class="ListTitle">设备状态</span>
      <text class='ListVal'>{{ma.status}}</text>
    </li>
    <li>
      <span class="ListTitle">备注信息</span>
      <text class='ListVal'>{{ma.describe}}</text>
    </li>
    <li>
      <span class="ListTitle">设备图片</span>
      <text class='ListVal'>{{ma.image}}</text>
    </li>
  </ul>
</view>
<!-- 设备档案 结束 -->

</view>